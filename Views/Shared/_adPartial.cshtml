@model List<JobAd>

<a class="nav-item nav-link" id="@ViewData["website"]" data-toggle="tab" href="#nav-@ViewData["website"]" role="tab"
    aria-controls="nav-@ViewData["website"]" aria-selected="true">@ViewData["website-name"]</a>

<div class="tab-pane fade show" id="nav-@ViewData["website"]" role="tabpanel">
    @foreach (var item in Model)
    {
        <div class="card">
            <div class="row no-gutters" dir="rtl">
                <div class="col-sm-2" style="background: #868e96;">
                    <img src="@item.LogoUrl" class="card-img-top h-100" alt="ad logo">
                </div>
                <div class="col-sm-10">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        @if (!string.IsNullOrEmpty(item.Location))
                        {
                            <p class="card-text">@item.Company - @item.Location</p>
                        }
                        else
                        {
                            <p class="card-text">@item.Company</p>
                        }
                        <p class="card-text badge badge-light">@item.DateIdentifier</p>
                        <div style="width: 100%;">
                            <a style="float: left;" target="_blank" href="@item.Url" class="btn btn-primary">لینک آگهی</a>
                            <button data-url="@item.Url" data-title="@item.Title" type="button" class="btn btn-info getDetailButton"
                                data-toggle="modal" data-target="#exampleModalLong">
                                جزئیات
                            </button>
                            <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog"
                                aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                                <div class="modal-dialog modal-lg" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLongTitle"></h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            ...
                                        </div>
                                        <div class="modal-footer">
                                            <a class="btn btn-secondary modal-button-ad-link" target="_blank">برو به
                                                آگهی</a>
                                            <button type="button" class="btn btn-primary" data-dismiss="modal">بستن</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
    }
</div>
